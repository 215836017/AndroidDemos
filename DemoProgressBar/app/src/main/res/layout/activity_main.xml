<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressBarActivity">

    <Button
        android:id="@+id/button_progressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:onClick="mainBtnClick"
        android:text="progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="mainBtnClick"
        android:text="seekBar"
        app:layout_constraintEnd_toEndOf="@+id/button_progressBar"
        app:layout_constraintStart_toStartOf="@+id/button_progressBar"
        app:layout_constraintTop_toBottomOf="@+id/button_progressBar" />

    <Button
        android:id="@+id/button_ratingBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="mainBtnClick"
        android:text="ratingBar"
        app:layout_constraintEnd_toEndOf="@+id/button_seekBar"
        app:layout_constraintStart_toStartOf="@+id/button_seekBar"
        app:layout_constraintTop_toBottomOf="@+id/button_seekBar" />

</androidx.constraintlayout.widget.ConstraintLayout>